{
  "name": "number-one",
  "version": "1.0.13",
  "description": "A Node.js based Twitch chat bot",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build:typescript": "tsc",
    "build:scss": "node-sass --output-style compressed --output dist/web/overlays/wwwroot/styles src/web/overlays/styles",
    "build:copy:overlays": "copyfiles -E -u 4 \"src/web/overlays/wwwroot/**/*\" dist/web/overlays/wwwroot",
    "build:copy:assets": "copyfiles -E \"assets/**/*\" dist/web/overlays/wwwroot",
    "build:copy": "npm run build:copy:overlays && npm run build:copy:assets",
    "build": "npm run build:typescript && npm run build:scss && npm run build:copy",
    "debug": "nodemon -i .git,node_modules -e js,ts,htm,env,scss,json,vue -w ./src -x \"node --inspect --require ts-node/register ./src/index.ts\"",
    "lint": "eslint ./",
    "test": "mocha -r ts-node/register src/**/*spec.ts --insect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/builders-club/number-one.git"
  },
  "author": "Michael Jolley <mike@sparcapp.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/builders-club/number-one/issues"
  },
  "homepage": "https://github.com/builders-club/number-one#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "comfy.js": "^1.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faunadb": "^2.14.2",
    "guid-typescript": "^1.0.9",
    "nexmo": "^2.7.0-beta-1",
    "node-sass-middleware": "^0.11.0",
    "sanitize-html": "^1.27.4",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/node-sass": "^4.11.1",
    "@types/node-sass-middleware": "0.0.31",
    "@types/sinon": "^9.0.4",
    "@types/socket.io": "^2.1.10",
    "@types/socket.io-client": "^1.4.34",
    "@types/tmi.js": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "copyfiles": "^2.4.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-vue": "^7.0.1",
    "mocha": "^8.1.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.2",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
