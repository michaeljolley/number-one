{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register --require dotenv/config"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development",
    "DOTENV_CONFIG_PATH": "../.env"
  },
  "ext": "js,json,ts"
}